{
  "name": "shamir-tss-gf256",
  "version": "0.2.3",
  "description": "Uses Shamir's secret sharing method to allows space-effecient secret sharing (splitting) that requires a minimum threshold of shares in order to unlock the orignal secret.",
  "author": "Shane Holloway <shane.holloway@ieee.org>",
  "license": "BSD-2-Clause",
  "keywords": [
    "threshold secret sharing", "secret sharing", "Shamir", "sss", "ssss",
    "Lagrange", "Lagrange interpolate", "Lagrange interpolation", "Lagrange polynomial",
    "finite field", "Galois Field", "Galois", "GF(2^8)", "GF256", "GF(256)"
  ],

  "homepage": "https://github.com/shanewholloway/node-shamir-tss-gf256/issues",
  "repository": "shanewholloway/node-shamir-tss-gf256",
  "browser": "dist/browser.js",
  "main": "dist/index.js",
  "files": ["dist/", "code/", "test/"],
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-preset-jsy": "^0.6.1",
    "tap-lite-tester": "^0.3.9"
  },
  "babel": {
    "presets": "jsy"
  },
  "scripts": {
    "build": "babel -s inline -x .js,.jsy code -d dist",
    "watch": "npm -s run build -- --watch",
    "prepublish": "npm -s run build",
    "pretest": "npm -s run build",
    "test": "babel-node test/all.jsy test/test*"
  }
}
